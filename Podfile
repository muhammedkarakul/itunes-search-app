# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'iTunes Search' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for iTunes Search

  # Network 
  pod 'Alamofire'
  pod 'Kingfisher'

  # Layout
  pod 'SnapKit'

  # Response Handling
  pod 'PromisedFuture'

  # UI
  pod 'JGProgressHUD'
end
